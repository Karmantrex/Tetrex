function sortSheetByQID() {
  // CHANGE THIS to your exact tab name
  const TAB_NAME = '';

  const ss = SpreadsheetApp.getActiveSpreadsheet();
  const sheet = ss.getSheetByName(TAB_NAME);
  if (!sheet) throw new Error(`Tab not found: ${TAB_NAME}`);

  const data = sheet.getDataRange().getValues();
  if (data.length < 2) throw new Error('No data to sort');

  // Find QID column index from header row
  const header = data[0].map(h => String(h).trim());
  const qidIndex = header.findIndex(h => h.toLowerCase() === 'qid');
  if (qidIndex === -1) throw new Error('QID column not found');

  // Sort everything except header row, based on QID column
  const rangeToSort = sheet.getRange(2, 1, sheet.getLastRow() - 1, sheet.getLastColumn());
  rangeToSort.sort({ column: qidIndex + 1, ascending: true });

  SpreadsheetApp.flush();
}
